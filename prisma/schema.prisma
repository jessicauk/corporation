generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ContactFormSubmission {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  phone String
  company String?
  subject String
  message String
  department String?
  attachmentFilePath String
  consentGiven Boolean @default(false)
  dateTimestamp DateTime @default(now())
}
